datasource postgres {
  provider = "postgresql"
  url      = env("POSTGRESQL_URL")
}

generator client {
  provider = "prisma-client-js"
}

model User {
  createdAt DateTime @default(now())
  firstName String?
  id        String   @id @default(cuid())
  lastName  String?
  orders    Order[]
  password  String
  roles     String[]
  updatedAt DateTime @updatedAt
  username  String   @unique
}

model Order {
  createdAt DateTime  @default(now())
  id        String    @id @default(cuid())
  products  Product[]
  updatedAt DateTime  @updatedAt
  user      User?     @relation(fields: [userId], references: [id])
  userId    String?
}

model Product {
  createdAt DateTime @default(now())
  id        String   @id @default(cuid())
  order     Order[]
  updatedAt DateTime @updatedAt
}